#------------------------------------------------------------------------------
# Azure DevOps Configuration
#------------------------------------------------------------------------------
# Copy this file to terraform.tfvars and fill in your values
#------------------------------------------------------------------------------

# Azure DevOps Configuration
# Get from: https://dev.azure.com -> User Settings -> Personal Access Tokens
azuredevops_org_service_url = "https://dev.azure.com/your-org-name"
azuredevops_pat             = "your-azure-devops-pat-token"

# Get project ID via: az devops project show --project finrisk --query id -o tsv
azuredevops_project_id = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Project Configuration
project_name = "finrisk"
environment  = "dev"
branch       = "main"
pipeline_yaml_path = "/pipelines/azure-pipelines.yml"

# GitHub Repository
github_repository_url = "https://github.com/sachajw/career-pollinate-assessment"

# Azure Service Principal
# Create via: az ad sp create-for-rbac --name "azure-devops-finrisk" --role Contributor
azure_client_id     = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
azure_client_secret = "your-sp-client-secret"
azure_tenant_id     = "xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Application Secrets
riskshield_api_key = ""  # Set when you have a real API key
