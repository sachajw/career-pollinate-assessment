# Terraform Variables for Development Environment
# Copy this file to terraform.tfvars and update with your values
# DO NOT commit terraform.tfvars with sensitive values to version control

# Azure subscription ID (optional, can use az login default)
# subscription_id = "00000000-0000-0000-0000-000000000000"

# Azure region for all resources
location = "eastus2"

# Project name (used for resource naming)
project_name = "riskscoring"

# Environment name
environment = "dev"

# Container App scaling configuration
container_app_min_replicas = 0  # Scale to zero to save costs in dev
container_app_max_replicas = 5  # Max 5 replicas for dev

# Log retention in days (dev: 30 days to minimize cost)
log_analytics_retention_days = 30

# Enable Application Insights availability test
enable_availability_test = false

# Additional tags (optional)
tags = {
  CostCenter  = "Engineering"
  Owner       = "Platform Team"
  Environment = "Development"
}
